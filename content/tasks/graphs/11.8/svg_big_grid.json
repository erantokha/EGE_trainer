<svg xmlns="http://www.w3.org/2000/svg" width="300" height="300" viewBox="-80 0 300 300">

  <rect x="-80" y="0" width="300" height="300" fill="white" />

  <defs>
    <marker id="axis-arrow"
            viewBox="0 0 15 8"
            refX="13" refY="4"
            markerWidth="12" markerHeight="6.4"
            orient="auto"
            markerUnits="userSpaceOnUse">
      <path d="M 3 0 L 15 4 L 3 8 L 7 4 Z" fill="black" />
    </marker>
  </defs>

  <!-- сетка 14×14 (от -7 до 7), без окаймления по периметру -->
  <g stroke="#d1d5db" stroke-width="0.5" shape-rendering="crispEdges">
    <line x1="-50" y1="10" x2="-50" y2="290" />
    <line x1="-30" y1="10" x2="-30" y2="290" />
    <line x1="-10" y1="10" x2="-10" y2="290" />
    <line x1="10"  y1="10" x2="10"  y2="290" />
    <line x1="30"  y1="10" x2="30"  y2="290" />
    <line x1="50"  y1="10" x2="50"  y2="290" />
    <line x1="70"  y1="10" x2="70"  y2="290" />
    <line x1="90"  y1="10" x2="90"  y2="290" />
    <line x1="110" y1="10" x2="110" y2="290" />
    <line x1="130" y1="10" x2="130" y2="290" />
    <line x1="150" y1="10" x2="150" y2="290" />
    <line x1="170" y1="10" x2="170" y2="290" />
    <line x1="190" y1="10" x2="190" y2="290" />

    <line x1="-70" y1="30"  x2="210" y2="30"  />
    <line x1="-70" y1="50"  x2="210" y2="50"  />
    <line x1="-70" y1="70"  x2="210" y2="70"  />
    <line x1="-70" y1="90"  x2="210" y2="90"  />
    <line x1="-70" y1="110" x2="210" y2="110" />
    <line x1="-70" y1="130" x2="210" y2="130" />
    <line x1="-70" y1="150" x2="210" y2="150" />
    <line x1="-70" y1="170" x2="210" y2="170" />
    <line x1="-70" y1="190" x2="210" y2="190" />
    <line x1="-70" y1="210" x2="210" y2="210" />
    <line x1="-70" y1="230" x2="210" y2="230" />
    <line x1="-70" y1="250" x2="210" y2="250" />
    <line x1="-70" y1="270" x2="210" y2="270" />
  </g>

  <!-- оси -->
  <g stroke="#111827" stroke-width="1.25">
    <line x1="-70" y1="150" x2="210" y2="150" marker-end="url(#axis-arrow)" />
    <line x1="70" y1="290" x2="70" y2="10"  marker-end="url(#axis-arrow)" />
  </g>

  <!-- подписи осей и делений -->
  <g font-family="sans-serif" font-size="11" fill="#111827">
    <text x="66" y="163" text-anchor="end"
          font-size="13" font-style="italic"
          font-family="Georgia, 'Times New Roman', serif">O</text>

    <rect x="87" y="153" width="7" height="12" fill="white" />
    <text x="90" y="164" text-anchor="middle" font-size="13"
          font-family="'Times New Roman', serif"
          font-weight="300">1</text>

    <text x="63" y="134" text-anchor="end" font-size="13"
          font-family="'Times New Roman', serif"
          font-weight="300">1</text>

    <text x="206" y="163" text-anchor="start"
          font-family="Georgia, 'Times New Roman', serif"
          font-style="italic" font-size="13">x</text>

    <text x="64" y="13" text-anchor="end"
          font-family="Georgia, 'Times New Roman', serif"
          font-style="italic" font-size="13">y</text>
  </g>

  <!-- парабола y = x^2 - 4x + 3 -->
  <g stroke="#2d70b3" stroke-width="1.25" fill="none"
     stroke-linecap="round" stroke-linejoin="round">
    <path d="M 53.431 10 Q 110 330 166.569 10" />
  </g>

  <!-- прямая y = 2x - 2, продолжена до границ сетки -->
  <g stroke="#166534" stroke-width="1.25" fill="none">
    <line x1="20" y1="290" x2="160" y2="10" />
  </g>

  <!-- точки на графиках (r=2.2) -->
  <circle cx="90" cy="150" r="2.2" fill="#2d70b3" />
  <circle cx="70" cy="90"  r="2.2" fill="#2d70b3" />
  <circle cx="150" cy="90" r="2.2" fill="#2d70b3" />
  <circle cx="70" cy="190" r="2.2" fill="#166534" />

  <!-- подписи графиков -->
  <text x="150" y="130"
        font-family="Georgia, 'Times New Roman', serif"
        font-style="italic"
        font-size="13"
        fill="#2d70b3">f(x)</text>

  <!-- g(x) на 5 px правее (было 105) -->
  <text x="110" y="50"
        font-family="Georgia, 'Times New Roman', serif"
        font-style="italic"
        font-size="13"
        fill="#166534">g(x)</text>

  <!-- точка A -->
  <text x="100" y="145"
        font-family="Georgia, 'Times New Roman', serif"
        font-size="13"
        fill="#111827">A</text>

</svg>
